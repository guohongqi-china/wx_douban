/*  cmps/movie-item/movie-item.wxss */
.item{
    /* margin: 0 15rpx; */
    display: inline-flex;
    flex-direction: column;
    width: 210rpx;
    /* background-color: aquamarine; */
}

.item .photo{
    width: 100%;
    height: 331rpx;
    margin-bottom: 15rpx;
    border-radius: 10rpx;
    border: 4rpx solid #F2F2F2;
 }


.item .title{
    font-weight: bold;
    font-size: 32rpx;
    margin-bottom: 4rpx;
     /* 超出宽度内容直接隐藏 */
    overflow: hidden;
    /* 尾部超出的内容显示省略号 */
    text-overflow: ellipsis;
    color: royalblue;
    white-space: nowrap;
}
.score{
    display: flex;
    /* width: 40rpx; */
    height: 40rpx;
    align-items: center;
    color: #c9c9c9;
}

.score .stars{
    display: flex;
    margin-right: 4rpx;
}

.stars .star{
    width: 26rpx;
    height: 26rpx;
}