<!-- cmps/nav-bar/nav-bar.wxml -->
<view class="container">
    <view style="{{ statusBarStyle }}"></view>
    <view class="nav-bar" style="{{ navBarStyle }}">
        <view class="title">{{ title }}</view>
        <view class="icons">
            <image class="back" bind:tap="back" wx:if="{{ back == 'true' }}" src="/imgs/nav_back.png"></image>
            <image class="home" bind:tap="home" wx:if="{{ home == 'true' }}" src="/imgs/nav_home.png"></image>
        </view>
    </view>
</view>