.container{
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    /* height: 100%; */
    overflow: scroll;
    /* background-color: coral; */
}
.version{
    /* position: absolute; */
    /* bottom: 50rpx; */
    color: #C9C9C9;
    font-size: 24rpx;
    text-align: center;
    margin-bottom: 30rpx;
}

.version .version-item{
    align-items: flex-end;
}

.loginBuffer{
    width: 100%;
    background-color: lightcoral;
    height: 350rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
}

.loginBuffer image{
    position: absolute;
    width: 100%;
    height: 100%;
    z-index: 1;
}

.login-btn{
    background-color: #ffffff;
    width: 45%;
    height: 100rpx;
    line-height:100rpx;
    text-align: center;
    border-radius: 50rpx;
    font-size: 40rpx;
    z-index: 2;
    box-shadow: 2rpx 2rpx 2rpx 0 rgb(0, 0, 0,0.1);
}

.tab-container {
    background-color: darkseagreen;
    width: 100%;
    height: 100rpx;
    display: flex;
    justify-content: space-between;
    padding:0 40rpx;
}


.title-content{
    color:black;
    background-color: deepskyblue;
    font-size: 40rpx;
}

.login-container{
    color: dimgrey;
    background-color: firebrick;
    font-size: 30rpx;
}

.icon-title {
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;

}

.buffer {
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    background-color: gold;
}

